{
  "name": "Courier Management System",
  "description": "A comprehensive full-stack Courier Management Web Application with authority letter generation, department management, and role-based access control",
  "language": "nodejs",
  "run": "npm run dev",
  "build": "npm run build",
  "start": "npm start",
  "setup": "npm install && npm run db:push",
  "entrypoint": "server/index.ts",
  "onBoot": "npm run db:push",
  "packager": {
    "language": "nodejs",
    "features": {
      "enabledForHosting": true,
      "packageSearch": true,
      "guessImports": true
    }
  },
  "env": {
    "NODE_ENV": "development",
    "PORT": "5000"
  },
  "unitTest": {
    "language": "nodejs"
  }
}